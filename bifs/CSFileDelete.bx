import bxModules.bxcloudstorage.models.CloudStorageService;

@BoxBIF
class {

	/**
	 * Delete a single object from Cloud Storage.
	 *
	 * @file Cloud path to delete, e.g. `s3:///bucket/key` (relative keys resolved by CloudStorageService).
	 * @return Struct from provider when available (e.g., `{ success:true }`), or `{ success:false, message:string }` on error.
	 */
	struct function invoke( required string file ) {
	   try {
			// Use CloudStorageService to get the storage and parse object
			var cloud = new CloudStorageService().getStorageForPath( arguments.file );

			return cloud.storage.deleteObject( cloud.bucketName, cloud.objectKey );

		} catch ( any e ) {
			return { success = false, message = 'CSFileDelete failed: ' & e.message };
		}
	}

}
